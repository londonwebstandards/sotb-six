<article class="talk talk--large">
  {{#if speaker}}
    <div class="speaker__card row align-center">
      <div class="small-6 medium-3 columns">
        <img class="speaker__picture" src="/images/{{speaker.picture}}">
      </div>
      <div class="small-12 medium-6 columns speaker__content">
        <p>{{{speaker.bio}}}
          {{#if speaker.website }}
          <br>
          <a href="{{speaker.website}}" title="{{speaker.name}} website">{{speaker.website}}</a>
          {{/if}}
        </p>
        <p><a class="cta cta--twitter" href="https://twitter.com/{{speaker.twitter}}" title="{{speaker.name}}'s Twitter profile">@{{speaker.twitter}}</a></p>
      </div>
    </div>
  {{else}}
    <ul class="row align-center speaker__list">
    {{#each speakers}}
      <li class="small-12 medium-6 column talk__speaker">
        <div class="speaker__card row align-center">
          <div class="small-6 medium-4 column">
            <img class="speaker__picture" src="/images/{{picture}}">
          </div>
          <div class="small-12 medium-8 column speaker__content">
            <p>{{bio}}</p>
            <p><a class="cta cta--twitter" href="https://twitter.com/{{twitter}}" title="{{name}}'s Twitter profile">@{{twitter}}</a></p>
          </div>
        </div>
      </li>
    {{/each}}
    </ul>
  {{/if}}
  <div class="row">
    <div class="large-12 column">
      {{{contents}}}
    </div>
  </div>
</article>